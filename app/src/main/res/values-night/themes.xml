<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAlgoTest" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_variant_night</item>
        <item name="colorOnPrimary">@color/on_primary_night</item>
        <item name="colorPrimaryContainer">@color/primary_container_night</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_night</item>
        <item name="colorOnSecondary">@color/on_secondary_night</item>
        <item name="colorSecondaryContainer">@color/secondary_container_night</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_night</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary_night</item>
        <item name="colorOnTertiary">@color/on_tertiary_night</item>
        <item name="colorTertiaryContainer">@color/tertiary_container_night</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">arial</item>
        <item name="materialCardViewStyle">@style/MaterialCardView.Dark</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
    </style>

    <style name="ImageViewStyle">
        <item name="tint">@color/icon_dark</item>
    </style>

    <style name="TILDropdownStyle" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
    </style>

    <style name="AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
    </style>

    <style name="MaterialCardView.Dark" parent="Widget.Material3.CardView.Filled">
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
    </style>

    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="endIconTint">@color/icon_dark</item>
        <item name="startIconTint">@color/icon_dark</item>
    </style>

    <!-- Define the style for RoundedButton -->
    <style name="RoundedButton" parent="Widget.Material3.Button.OutlinedButton">
    </style>

    <style name="DeclineRoundedButton" parent="Widget.Material3.Button.OutlinedButton">
    </style>
</resources>