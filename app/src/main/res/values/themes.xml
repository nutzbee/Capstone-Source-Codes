<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAlgoTest" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurfaceInverse">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">arial</item>
        <item name="materialCardViewStyle">@style/MaterialCardView.Light</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
    </style>

    <style name="TILDropdownStyle" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for MaterialCardView in dark theme -->
    <style name="MaterialCardView.Light" parent="Widget.Material3.CardView.Outlined">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="CardView.Light" parent="Widget.MaterialComponents.CardView">
    </style>

    <!-- Define the style for RoundedTextInputLayout -->
    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
    </style>

    <!-- Define the style for RoundedButton -->
    <style name="RoundedButton" parent="Widget.Material3.Button.TonalButton">
    </style>

    <style name="DeclineRoundedButton" parent="Widget.Material3.Button.TonalButton">
    </style>

</resources>