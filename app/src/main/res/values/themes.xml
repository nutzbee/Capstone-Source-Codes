<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAlgoTest" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="itemIconTint">@color/black</item>
        <item name="fontFamily">@font/dmsans_regular</item>
        <item name="materialCardViewStyle">@style/MaterialCardView.Light</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
    </style>

    <style name="ImageViewStyle">
        <item name="tint">@color/icon_light</item>
    </style>

    <style name="TILDropdownStyle" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/box_color_light</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
    </style>

    <!-- Style for MaterialCardView in dark theme -->
    <style name="MaterialCardView.Light" parent="Widget.Material3.CardView.Filled">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
    </style>

    <style name="CardView.Light" parent="Widget.MaterialComponents.CardView">
    </style>

    <!-- Define the style for RoundedTextInputLayout -->
    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/icon_light</item>
        <item name="startIconTint">@color/icon_light</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipIconTint">@color/icon_light</item>
        <item name="closeIconTint">@color/icon_light</item>
    </style>

    <!-- Define the style for RoundedButton -->
    <style name="RoundedButton" parent="Widget.Material3.Button.ElevatedButton">
    </style>

    <style name="DeclineRoundedButton" parent="Widget.Material3.Button.ElevatedButton">
    </style>

</resources>