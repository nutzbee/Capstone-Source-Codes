<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:checkable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:id="@+id/materialRCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/reco_food_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/food_image"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_fastfood_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/reco_food_image"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/reco_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                tools:text="Sample Food Name"
                android:textStyle="bold"/>

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/reco_food_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Calories" />

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/reco_food_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Food Group" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>