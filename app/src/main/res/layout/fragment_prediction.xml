<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutDiaCheck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedSVDiaCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pregnancies_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Pregnancy count"
                app:counterEnabled="true"
                app:counterMaxLength="2"
                app:helperText="Put 0 if no pregnancy history">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pregnancies_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/glucose_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pregnancies_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Glucose count"
                android:visibility="gone"
                app:helperText="Glucose count based on the recent medical records"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/glucose_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bloodPressure_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/glucose_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Blood Pressure"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                app:helperText="Diastolic Bood Pressure based on the recent BP test"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bloodPressure_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/skinthickness_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bloodPressure_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Skin Thickness"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                app:helperText="Skin Thickness in mm based on the recent medical records"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/skinthickness_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/insulin_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/skinthickness_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Insulin"
                android:visibility="gone"
                app:helperText="Insulin shot level based on the recent medical records"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insulin_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bmi_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insulin_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Body Mass Index"
                android:visibility="gone"
                app:helperText="Click for calculator"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bmi_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dpf_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bmi_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Diabetes Pedigree Function"
                android:visibility="gone"
                app:helperText="DPS based on the recent medical records"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dpf_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/age_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpf_inputlayout"
                android:layout_marginTop="16dp"
                android:hint="Age"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                app:helperText="Age should not be equal to 0, negative, or greater than 100"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/age_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/predictme_button"
                style="@style/RoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age_inputlayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:text="Next" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>